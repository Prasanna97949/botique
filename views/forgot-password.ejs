<%- include('partials/header') %>
<div class="min-h-screen flex items-center justify-center">
    <div class="w-full max-w-md bg-white rounded-lg shadow-md p-8">
        <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Forgot Password</h2>
        <form action="/forgot-password" method="post">
            <div class="mb-4">
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email"
                    placeholder="Enter your email"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 text-gray-900"
                    required
                />
            </div>
            <button type="submit" class="w-full bg-blue-600 text-white font-medium py-2 rounded-lg hover:bg-blue-700 transition duration-300">Submit</button>
        </form>
    </div>
</div>
<%- include('partials/footer') %>
<script src="/js/index.js"></script>
<% if (locals.message ? message:"") { %>
    <script>
        alert("<%= message %>");
    </script>
    <% } %>

</body>
</html>