<%- include('partials/header') %>
     <!-- side navbar -->
     <Section id="sidenav" class="bg-white fixed z-20 top-0 transition-all duration-1000 " style="width: 50%; height: 100vh;right: -50%;">
        <div class="text-right p-5">
            <p id="close-nav" class="inline cursor-pointer">X</p>
        </div>
        <ul class="flex flex-col items-center gap-10 text-gray-600">
            <li class="pt-1 border-b-2 hover:border-black cursor-pointer">Home</li>
                <li class="pt-1 border-b-2 hover:border-black cursor-pointer">Collections</li>
                <li class="pt-1 border-b-2 hover:border-black cursor-pointer">About Us</li>
                <li class="pt-1 border-b-2 hover:border-black cursor-pointer">Contact Us</li>
        </ul>
     </Section>
        <!-- product view -->
        <div class="container mx-auto p-6">
            <!-- Product View Container -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 bg-white shadow-lg rounded-lg overflow-hidden">
                <!-- Image Section -->
                <div class="p-4">
                    <div class="flex flex-col items-center">
                        <div class="w-full mb-4 border rounded-md overflow-hidden">
                            <img id="mainImage" src="/uploads/<%= products.image_1 %>" alt="Product Image" class="w-full image-zoom">
                        </div>
                        <div class="flex space-x-2">
                            <img src="/uploads/<%= products.image_1 %>" alt="Thumbnail 1" class="w-20 h-20 border rounded cursor-pointer hover:opacity-75" onclick="changeImage(this.src)">
                            <% if (products.image_2) { %>
                                <img src="/uploads/<%= products.image_2 %>" alt="Thumbnail 2" class="w-20 h-20 border rounded cursor-pointer hover:opacity-75" onclick="changeImage(this.src)">

                            <% } %>
                            <% if (products.image_3) { %>                          



                            <img src="/uploads/<%= products.image_3 %>" alt="Thumbnail 3" class="w-20 h-20 border rounded cursor-pointer hover:opacity-75" onclick="changeImage(this.src)">
                            <% } %>

                            <% if (products.image_4) { %>
                            <img src="/uploads/<%= products.image_4 %>" alt="Thumbnail 4" class="w-20 h-20 border rounded cursor-pointer hover:opacity-75" onclick="changeImage(this.src)">
                            <% } %>
                        </div>
                    </div>
                </div>
    
                <!-- Product Details Section -->
                <div class="p-6">
                    <h1 class="text-3xl font-semibold mb-4"><%= products.name %></h1>
                    <p class="text-lg text-gray-700 mb-4"><%= products.description %></p>
    
                    <div class="flex items-center mb-4">
                        <span class="text-2xl font-bold text-gray-800">₹<%= products.price %></span>
                        <% if (products.price_2) { %>  
                        <span class="ml-2 text-sm line-through text-gray-500">₹ <%= products.price_2 %></span>
                        <% } %>

                        <% if (products.offer) { %>  
                        <span class="ml-4 text-green-600"><%= products.offer %>% Off</span>
                        <% } %>
                    </div>
    
                    <div class="mb-4">
                        <span class="inline-block bg-yellow-300 text-black py-1 px-3 rounded-full">4.5 &#9733;</span>
                        <span class="ml-2 text-gray-600">(1,234 ratings)</span>
                    </div>
    
                    <!-- Key Features List -->
                    <ul class="list-disc ml-5 mb-4 text-gray-600">
                        <li>High-quality materials</li>
                        <li>Hand Made</li>
                        <li>Durable and long-lasting</li>
                        <li>Lited Stock</li>
                    </ul>
    
                    <!-- Buy Button and Options -->
                    <div class="mb-4">
                        <label for="quantity" class="block mb-2 text-gray-700">Quantity:</label>
                        <input type="number" id="quantity" class="border rounded w-20 p-2 mb-4" min="1" value="1">
    
                        <button class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-200">Add to Cart</button>
                    </div>
    
                    <!-- Additional Information -->
                    <div class="mt-6">
                        <h2 class="text-xl font-medium mb-2">Description</h2>
                        <p class="text-sm text-gray-700">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla quis libero nec nulla pretium viverra. Suspendisse potenti.</p>
                    </div>
                </div>
            </div>
        </div>

     <!-- Footer -->
     <%- include('partials/footer') %>
     <script src="/js/productview.js"></script>
    
</body>
</html>