<%- include('partials/header') %>
    <div class="p-4 bg-white m-3 rounded-md shadow-md">
        <h1 class="text-2xl font-bold mb-4">Welcome, <%= user.first_name %> <%= user.last_name %>!</h1>
        <h2 class="text-xl font-semibold mb-4">Your Orders</h2>
        <div class="space-y-4">
            <% orders.forEach(order => { %>
                <div class="p-4 bg-gray-100 rounded-md shadow-sm">
                    <div class="flex justify-between items-center mb-2">
                        <div>
                            <p class="text-lg font-semibold">Order ID: <%= order.order_id %></p>
                            <p class="text-sm text-gray-600">Order Date: <%= order.order_date %></p>
                        </div>
                        <div class="text-right">
                            <p class="text-lg font-semibold">Total: $<%= order.total %></p>
                            <p class="text-sm text-gray-600">Status: <%= order.status %></p>
                        </div>
                    </div>
                    <div class="mb-2">
                        <% order.products.forEach(product => { %>
                            <div class="mb-2">
                                <p class="text-sm font-semibold">Product Name: <%= product.product_name %></p>
                                <p class="text-sm text-gray-600">Quantity: <%= product.quantity %></p>
                                <p class="text-sm text-gray-600">Price: $<%= product.price %></p>
                            </div>
                        <% }); %>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2.5 mb-2">
                        <div class="bg-blue-600 h-2.5 rounded-full" style="width: <%= order.status === 'Delivered' ? '100%' : order.status === 'Dispatched' ? '75%' : order.status === 'Preparing' ? '50%' : '25%' %>"></div>
                    </div>
                    <div class="flex justify-between text-xs text-gray-600">
                        <span class="<%= order.status === 'Ordered' ? 'text-blue-600 font-bold' : '' %>">Ordered</span>
                        <span class="<%= order.status === 'Processing' ? 'text-blue-600 font-bold' : '' %>">Processing</span>
                        <span class="<%= order.status === 'Dispatched' ? 'text-blue-600 font-bold' : '' %>">Dispatched</span>
                        <span class="<%= order.status === 'Delivered' ? 'text-blue-600 font-bold' : '' %>">Delivered</span>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    <%- include('partials/footer') %>
    <script src="/js/index.js"></script>
</body>
</html>