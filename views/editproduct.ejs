      <h1 class="text-2xl text-white font-bold p-3">Edit Product Descriptions</h1>
      <form action="/edit/<%= product.id %>" method="post" enctype="multipart/form-data">
      <table class="m-2">
        <tr><td><h3 class="font-bold text-xl text-white">Product Name:</h3></td><td><input class="p-3 m-3 rounded-md" type="text" placeholder="Product name" name="name" value="<%= product.name %>" required></td></tr>
        <tr><td><h3 class="font-bold text-xl text-white">Product Price:</h3></td><td><input class="p-3 m-3 rounded-md" type="number" placeholder="Product Price" name="price"  value="<%= product.price %>" required></td></tr>
        <tr><td><h3 class="font-bold text-xl text-white">Product Description:</h3></td><td><textarea class="p-3 m-3 rounded-md" placeholder="Product Description" id="desc" name="description" required><%= product.description %></textarea></td></tr>
        <tr><td><h3 class="font-bold text-xl text-white">Product Category:</h3></td><td><input class="p-3 m-3 rounded-md" type="text" placeholder="Product Category"name="category" value="<%= product.category %>" required></td></tr>
        <tr><td><h3 class="font-bold text-xl text-white">Duplicate Price:</h3></td><td><input class="p-3 m-3 rounded-md" type="number" placeholder="Duplicate Price" name="price_2" value="<%= product.price_2%>"></td></tr>
        <tr><td><h3 class="font-bold text-xl text-white">Offer (Discount):</h3></td><td><input class="p-3 m-3 rounded-md" type="number" placeholder="Offer (Discount)" name="offer" id="offer" value="<%= product.offer %>"></td></tr>
      </table>
